<?xml version="1.0" encoding="UTF-8"?>
<gen4db>
	<!-- project configuration -->
	<project name="myseam" version="1.0" basePackage="com.googlecode.myseam"/>
	
	<!-- database configuration -->
	<database>
		<hibernate.dialect>org.hibernate.dialect.MySQLInnoDBDialect</hibernate.dialect>
		<jdbc.driverClassName>com.mysql.jdbc.Driver</jdbc.driverClassName>
		<jdbc.url><![CDATA[jdbc:mysql://localhost/myseam?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;characterEncoding=utf-8]]></jdbc.url>
		<jdbc.username>root</jdbc.username>
		<jdbc.password>root</jdbc.password>
	</database>
	
	<!-- module configuration -->
    <!-- modules,module,table have a prefix property used to filter the table prefix,
       if the child element' prefix has value,use its prefix to filter,or use its parent prefix value 
    -->
	<modules >		
		<module name="admin">
			app_user,role
		</module>
		<module name="eatery">
			eatery,action_info,rank,rank_item
		</module>
		<module name="menu">
			menu_dictionary,course,course_method,method_video,
			course_item,menu,breakfast,lunch,supper,menu_item
		</module>
		<module name="resource">
			category,resource,resource_price
		</module>
	</modules>
	<prefix>app_</prefix>
</gen4db>